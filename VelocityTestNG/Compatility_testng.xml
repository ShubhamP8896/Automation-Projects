<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CompTestSuite">
  <test thread-count="3" name="CompatibilityTest">   <!-- we added parallel for run multiple cases at same time -->
	<parameter name = "browserName" value = "chrome"> </parameter>      <!-- we added this different browser -->
    <classes>
      <class name="sauceDemo.TestClass_Copy.TC003LogoutFunctionality_Copy"/>
      <class name="sauceDemo.TestClass_Copy.TC002AddToCartFunctionality_Copy"/>
      <class name="sauceDemo.TestClass_Copy.TC001LoginFunctionality_Copy"/>
    </classes>
  </test> <!-- CompatibilityTest -->

  <test thread-count="3" name="CompatibilityTest1">    <!-- add parallel = "classes" if you wnat to run all cases at same time -->
	<parameter name = "browserName" value = "firefox"> </parameter>   <!-- we added this different browser -->
    <classes>
      <class name="sauceDemo.TestClass_Copy.TC003LogoutFunctionality_Copy"/>
      <class name="sauceDemo.TestClass_Copy.TC002AddToCartFunctionality_Copy"/>
      <class name="sauceDemo.TestClass_Copy.TC001LoginFunctionality_Copy"/>
    </classes>
  </test> <!-- CompatibilityTest -->
</suite> <!-- CompTestSuite -->
