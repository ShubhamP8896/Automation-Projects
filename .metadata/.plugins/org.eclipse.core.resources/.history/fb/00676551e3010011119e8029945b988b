package practiceExam040226;

public class Reverse 
{
	 public static void main(String[] args) {
	        String str = "Hello";
	        char[] arr = str.toCharArray();
	        String reversed = "";

	        for (int i = arr.length - 1; i >= 0; i--) {
	            reversed = reversed + arr[i];
	        }

	        System.out.println("Reversed string: " + reversed);
	    }

}
